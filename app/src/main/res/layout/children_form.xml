                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="DOB (DD/MM/YY)"
                android:inputType="date" />

            <TextView
                android:id="@+id/update_orphans_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />


